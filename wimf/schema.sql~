DROP TABLE IF EXISTS "items";
DROP TABLE IF EXISTS "stored_items";
DROP TABLE IF EXISTS "recipes";
DROP TABLE IF EXISTS "recipes_ingredients";

CREATE TABLE "items" (
    "id" INTEGER,
    "name" TEXT NOT NULL,
    "expiry_time" NUMERIC NOT NULL,
    "date_added" NUMERIC NOT NULL,
    "expiry_date" 	NUMERIC NOT NULL,
    PRIMARY KEY("id")
);

CREATE TABLE "stored_items" (
    "id" INTEGER,
    "name" TEXT NOT NULL,
    "expiry_time" NUMERIC NOT NULL,
    "expiry_date" 	NUMERIC NOT NULL,
    PRIMARY KEY("id")
);

CREATE TABLE "recipes" (
    "id" INTEGER,
    "name" TEXT NOT NULL,

);
